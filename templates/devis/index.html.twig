{% extends 'base.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    <h1>Devis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Prenom</th>
                <th>Nom</th>
                <th>Mail</th>
                <th>NbPersonne</th>
                <th>SurfaceLogement</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for devi in devis %}
            <tr>
                <td>{{ devi.id }}</td>
                <td>{{ devi.prenom }}</td>
                <td>{{ devi.nom }}</td>
                <td>{{ devi.mail }}</td>
                <td>{{ devi.nbPersonne }}</td>
                <td>{{ devi.surfaceLogement }}</td>
                <td>{{ devi.date ? devi.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('devis_show', {'id': devi.id}) }}">show</a>
                    <a href="{{ path('devis_edit', {'id': devi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('devis_new') }}">Create new</a>
{% endblock %}
